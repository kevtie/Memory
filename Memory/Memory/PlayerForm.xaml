<Page x:Class="Memory.PlayerForm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Memory"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="700"
      Title="PlayerForm">

    <Grid x:Name="PlayerFormContainer" VerticalAlignment="Center" Background="White" Height="500">
        <StackPanel HorizontalAlignment="Stretch">
            <ListView x:Name="ActivePlayerList" Margin="5" Padding="40">
                <Grid x:Name="ActivePlayerListGrid" Width="500" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                </Grid>
            </ListView>
            <TextBox Margin="5" Name="UserInput" />
            <Button x:Name="AddPlayerButton" Margin="5" Content="Voeg Speler toe" Click="Button_ClickAdd" />
            <Button x:Name="StartGameButton" Margin="5" Content="Start spel" Click="Button_ClickStart" />
        </StackPanel>
    </Grid>
</Page>
